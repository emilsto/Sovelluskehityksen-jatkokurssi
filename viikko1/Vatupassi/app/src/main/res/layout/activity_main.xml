<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sensorValuesTextView"
        android:layout_width="265dp"
        android:layout_height="208dp"
        android:text="X: Y: Z:"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startTrackBtn"
        android:layout_width="232dp"
        android:layout_height="87dp"
        android:layout_marginBottom="32dp"
        android:onClick="startSensors"
        android:text="start tracking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/isParellelTextView"
        android:layout_width="190dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/startTrackBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensorValuesTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>